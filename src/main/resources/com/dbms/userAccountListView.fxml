<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import org.controlsfx.control.CheckComboBox?>

<BorderPane fx:id="bp_userAccountDataEntry" prefHeight="752.0" prefWidth="1040.0" stylesheets="@css/global.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dbms.UserAccountListController">
   <center>
      <VBox alignment="CENTER" spacing="24.0" BorderPane.alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="User Account Database" />
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label text="Search through: " />
                  <CheckComboBox fx:id="ccb_searchOptions" />
                  <TextField fx:id="tf_searchField" />
               </children>
            </HBox>
            <VBox maxWidth="1200.0" prefHeight="200.0" prefWidth="100.0" styleClass="table">
               <children>
                  <TableView fx:id="tv_userAccountList" onMouseClicked="#onTableClick" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </VBox>
            <HBox alignment="CENTER_RIGHT">
               <children>
                  <Button mnemonicParsing="false" onAction="#addHandler" text="Add" />
                  <Button mnemonicParsing="false" onAction="#updateHandler" text="Edit" />
                  <Button mnemonicParsing="false" onAction="#deleteHandler" text="Delete" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="48.0" right="48.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
